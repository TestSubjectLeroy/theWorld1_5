@model IEnumerable<theWorld1_5.Models.Trip>
@{
    ViewBag.Title = "Home Page";
}
@section Scripts{

    <script src="~/vendor/angular/angular.js"></script>
    <script src="~/myJs/app-trips.js"></script>
    <script src="~/myJs/tripsController.js"></script>
}
 

<div class="row" ng-app="app-trips" >

    <div ng-controller="tripsController as vm" class="col-md-6 col-md-offset-3" >
        <div class="text-warning" ng-show="vm.errorMessage">{{ vm.errorMessage }}</div>
        <div ng-show="vm.isBusy" class="text-center"> <i class="fa fa-spinner fa-spin"></i>loading...</div>
        <table class="table table-responsive table-striped">
            <tr ng-repeat="trip in vm.trips">
                <td> {{trip.name}}</td>
                <td> {{trip.dateCreated | date:'MM-dd-yyyy' }} </td>
                <td><a href="#" class="btn btn-sm btn-primary" >Manage</a></td>
            </tr>
        </table>

        <form novalidate name="newTripForm" ng-submit="vm.addTrip()">
            <div class="form-group">
                <label for="name">Trip Name</label>
                <input class="form-control" type="text" id="name" name="name" ng-model="vm.newTrip.name" required ng-minlength="5" />
                <span ng-show="newTripForm.name.$error.required" class="text-warning">Name is Required.</span>
                <span ng-show="newTripForm.name.$error.minlength" class="text-warning">Name must at least 5 character.</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" 
                       class="btn btn-success btn-sm"
                       ng-disabled="newTripForm.$invalid"/>
            </div>
        </form>

    </div>

    
    <div class="col-md-6">
        <form>
            <h1> The world </h1>
            <p>what the hell is going on today</p>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control" />
            </div>

            <div class="form-group">
                <label>Location</label>
                <input class="form-control" />
            </div>
            <div>
                <input type="submit" name="name" value="Add" class="btn btn-success" />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h2>The Map</h2>

    </div>
</div>
